{
  "name": "copilot-workflow-composer",
  "version": "0.1.0",
  "description": "A programmable wrapper around 'gh copilot suggest' with multi-step YAML-defined workflows",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "cwc": "dist/cli.js"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "tsc && rm -f dist/cli.js && bun build src/cli.ts --target bun --outfile dist/cli.js && chmod +x dist/cli.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "bun test",
    "verify": "bash ./scripts/verify-install.sh",
    "parse-mcp": "bun run scripts/parse-mcp-servers.ts",
    "parse-apis": "bun run scripts/parse-public-apis.ts",
    "sync-catalogs": "bun run scripts/sync-external-resources.ts"
  },
  "keywords": [
    "github",
    "copilot",
    "cli",
    "workflow",
    "yaml",
    "automation"
  ],
  "author": "Copilot Hackathon Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ayush-CS-89112521/Copilot-Workflow-Composer-CWC-.git"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "chalk": "^5.3.0",
    "inquirer": "^8.2.5",
    "ora": "^7.0.1",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@types/bun": "latest",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.2.2",
    "@types/pg": "^8.16.0",
    "openai": "^6.18.0",
    "pg": "^8.18.0",
    "typescript": "^5.3.3"
  }
}